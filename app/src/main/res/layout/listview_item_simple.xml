<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_simpleitem_background"
    android:orientation="vertical"
    android:background="@mipmap/sky"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/listview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="8:41"/>
    <TextView
        android:id="@+id/listview_item_city"
        android:layout_below="@+id/listview_item_time"
        android:layout_marginLeft="30dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杭州"/>
    <TextView
        android:id="@+id/listview_item_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="35C"/>
</RelativeLayout>